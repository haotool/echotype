{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "short_name": "EchoType",
  "version": "0.9.2",
  "description": "__MSG_extDescription__",
  "author": { "email": "haotool.org@gmail.com" },
  "homepage_url": "https://github.com/haotool/echotype",
  "default_locale": "en",
  "action": {
    "default_title": "EchoType - Voice Dictation",
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "clipboardWrite",
    "alarms"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": ["https://chatgpt.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["tone-worklet.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["src/content/chatgpt/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/universal/index.ts"],
      "run_at": "document_idle",
      "exclude_matches": ["https://chatgpt.com/*"]
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": false
  },
  "commands": {
    "toggle-dictation": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Toggle dictation (Start/Submit)"
    },
    "cancel-dictation": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Cancel dictation and clear input"
    },
    "paste-last-result": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Paste last dictation result"
    }
  }
}
