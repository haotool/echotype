{
  "name": "echotype",
  "version": "0.8.6",
  "description": "Universal voice dictation via ChatGPT Whisper - Chrome Extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:all": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-results playwright-report",
    "package": "pnpm build && cd dist && zip -r ../EchoType-$(node -p \"require('../package.json').version\").zip ."
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.4.2",
    "terser": "^5.44.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
